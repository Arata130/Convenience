                <tr>
                    <th>仕入商品コード</th>
                    <th>仕入商品名称</th>
                    <th>注文残</th>
                    <th>納入数</th>
                    <th>倉庫在庫数</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.ShiireJisseki.Count; i++) {
                    <input asp-for="@Model.SokoZaiko[i].ShiireSakiId" type="hidden" />
                    <input asp-for="@Model.SokoZaiko[i].ShiirePrdId" type="hidden" />
                    <input asp-for="@Model.SokoZaiko[i].ShohinId" type="hidden" />
                    <input asp-for="@Model.SokoZaiko[i].SokoZaikoCaseSu" type="hidden" />
                    <input asp-for="@Model.SokoZaiko[i].LastShiireDate" type="hidden" />
                    <input asp-for="@Model.SokoZaiko[i].LastDeliveryDate" type="hidden" />

                    <input asp-for="@Model.ShiireJisseki[i].ChumonId" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ShiireDate" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].SeqByShiireDate" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ShiireDateTime" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ShiireSakiId" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ShiirePrdId" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ShohinId" type="hidden" />

                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ChumonId" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ShiireSakiId" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ShohinId" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ShiirePrdId" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ChumonSu" type="hidden" />
                    
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ChumonJisseki.ChumonId" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ChumonJisseki.ShiireSakiId" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ChumonJisseki.ChumonDate" type="hidden" />

                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ShiireMaster.ShiireSakiId" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ShiireMaster.ShiirePrdId" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ShiireMaster.ShohinId" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ShiireMaster.ShiirePrdName" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ShiireMaster.ShiirePcsPerUnit" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ShiireMaster.ShiireUnit" type="hidden" />
