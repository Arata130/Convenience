                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ShiireMaster.ShiireSakiMaster.YubinBango" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ShiireMaster.ShiireSakiMaster.Todoufuken" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ShiireMaster.ShiireSakiMaster.Shikuchoson" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ShiireMaster.ShiireSakiMaster.Banchi" type="hidden" />
                    <input asp-for="@Model.ShiireJisseki[i].ChumonJissekiMeisais.ShiireMaster.ShiireSakiMaster.Tatemonomei" type="hidden" />

