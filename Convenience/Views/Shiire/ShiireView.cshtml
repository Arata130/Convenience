@using Convenience.Models.ViewModels.Shiire;
@model ShiireViewModel;

@{
    ViewData["Title"] = "ShiireView";
}

<h3>仕入明細</h3>

<div class="form-group container">
    <form asp-action="ShiireView" method="post">
        <input type="hidden" name="id" value="1" />
        <div class="row">
            <label asp-for="@Model.ShiireJisseki[0].ChumonId" class="control-label col"></label>
            <input asp-for="@Model.ShiireJisseki[0].ChumonId" class="form-control custom-disabled col" tabindex="-1" />
        </div>
        <div class="row">
            <label asp-for="@Model.ShiireJisseki[0].ChumonJissekiMeisais.ChumonJisseki.ChumonDate" class="control-label col"></label>
            <input asp-for="@Model.ShiireJisseki[0].ChumonJissekiMeisais.ChumonJisseki.ChumonDate" class="form-control custom-disabled col" tabindex="-1" />
        </div>
        <div class="row">
            <label asp-for="@Model.ShiireJisseki[0].ShiireDate" class="control-label col"></label>
            <input asp-for="@Model.ShiireJisseki[0].ShiireDate" class="form-control custom-disabled col" tabindex="-1" />
        </div>
        <div class="row">
            <label asp-for="@Model.ShiireJisseki[0].SeqByShiireDate" class="control-label col"></label>
            <input asp-for="@Model.ShiireJisseki[0].SeqByShiireDate" class="form-control custom-disabled col" tabindex="-1" />
        </div>
        <div class="row">
            <label asp-for="@Model.ShiireJisseki[0].ShiireSakiId" class="control-label col"></label>
            <input asp-for="@Model.ShiireJisseki[0].ShiireSakiId" class="form-control custom-disabled col" tabindex="-1" />
        </div>
        <div class="row">
            <label asp-for="@Model.ShiireJisseki[0].ChumonJissekiMeisais.ShiireMaster.ShiireSakiMaster.ShiireSakiKaisya" class="control-label col"></label>
            <!--input asp-for="@Model.ShiireJisseki[0].ChumonJissekiMeisais.ShiireMaster.ShiireSakiMaster.ShiireSakiKaisya" class="form-control custom-disabled col" tabindex="-1" /-->
        </div>

